    private void jButton5ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
    jTextField1.setText("");  // Member ID
    jTextField2.setText("");  // Name
    jTextField3.setText("");  // Mobile Number
    jTextField4.setText("");  // Email
    jTextField5.setText("");  // Amount to pay

    // Reset editable state if changed during search
    jTextField1.setEditable(true);

    // Optional: clear the table data
    DefaultTableModel model = (DefaultTableModel) jTable1.getModel();
    model.setRowCount(0);  // This clears all rows

    // Optional: clear or reset date and month label if necessary
    jLabel4.setText("");  // Month or date label if you want to reset

    // Optional: show Save button again
    jButton3.setVisible(true);
 
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
            tableDetails();
    int checkid = 0;
    String id = jTextField1.getText();
    String month = jLabel4.getText();
    
    

    try {
        Connection con = ConnectionProvider.getCon();

        // First query
        Statement st1 = con.createStatement();
        ResultSet rs = st1.executeQuery("select * from member where id = '" + id + "'");
        while (rs.next()) {
            checkid = 1;
            jTextField1.setEditable(false);
            jTextField2.setText(rs.getString(2));
            jTextField3.setText(rs.getString(3));
            jTextField4.setText(rs.getString(4));
            jTextField5.setText(rs.getString(11));
        }
        rs.close();  // Close ResultSet before creating a new one
        st1.close(); // Optional but good practice

        if (checkid == 0) {
            JOptionPane.showMessageDialog(null, "Member ID does not Exist");
            return; // Exit early to avoid executing the next block
        }

        // Second query
        Statement st2 = con.createStatement();
        ResultSet rs1 = st2.executeQuery("select * from payment inner join member where payment.month='" + month + "' and payment.id='" + id + "' and member.id='" + id + "'");
        while (rs1.next()) {
            boolean paymentAlreadyDone = true;
    jButton3.setVisible(false);
    JOptionPane.showMessageDialog(null, "Payment is already done for this month");
}

        rs1.close();
        st2.close();

    } catch (Exception e) {
        JOptionPane.showMessageDialog(null, e);
    }
    }                                        

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        String id=jTextField1.getText();
        String month=jLabel4.getText();
        String amount=jTextField5.getText();
        try
        {
            Connection con = ConnectionProvider.getCon();
            PreparedStatement ps = con.prepareStatement("insert into payment values(?,?,?)");
            ps.setString(1,id);
            ps.setString(2,month);
            ps.setString(3,amount);
            ps.executeUpdate();
            tableDetails();
            JOptionPane.showMessageDialog(null,"Successful Updated");
            setVisible(false);
            new payment().setVisible(true);
            
        }
        catch(Exception e)
        {
            JOptionPane.showMessageDialog(null, e);
        }
    }                                        

